<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="org.example.project.ao_1.app.StallmanActivity">

    <ImageView
            android:layout_width="400px"
            android:layout_height="400px"
            android:id="@+id/rms_image"
            android:src="@drawable/rms" android:contentDescription="@string/rms_image_description"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rms_firstname"
            android:id="@+id/rms_firstname"
            android:layout_below="@+id/rms_image" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rms_middlename"
            android:id="@+id/rms_middlename"
            android:layout_below="@+id/rms_firstname" android:layout_alignLeft="@+id/rms_firstname"
            android:layout_alignStart="@+id/rms_firstname" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rms_lastname"
            android:id="@+id/rms_lastname"
            android:layout_below="@+id/rms_middlename" android:layout_alignLeft="@+id/rms_middlename"
            android:layout_alignStart="@+id/rms_middlename" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/rms_dobd"
            android:id="@+id/rms_dobd" android:layout_below="@+id/rms_lastname"
            android:layout_alignLeft="@+id/rms_lastname"
            android:layout_alignStart="@+id/rms_lastname" android:layout_marginTop="10dp" android:textSize="12sp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rms_scroll"
            android:fillViewport="false" android:layout_centerVertical="true" android:layout_toRightOf="@+id/rms_image"
            android:layout_toEndOf="@+id/rms_image" android:layout_marginLeft="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/rms_description"
                android:id="@+id/rms_description"/>
    </ScrollView>
</RelativeLayout>
